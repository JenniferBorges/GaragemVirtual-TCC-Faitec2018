<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="GaragemModel" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>com.academico.garagem.model.entity.User</class>
    <class>com.academico.garagem.model.entity.Vehicle</class>
    <class>com.academico.garagem.model.entity.Address</class>
    <class>com.academico.garagem.model.entity.Garage</class>
    <class>com.academico.garagem.model.entity.Disponibility</class>
    <class>com.academico.garagem.model.entity.Message</class>
    <class>com.academico.garagem.model.entity.RentGarage</class>
    <class>com.academico.garagem.model.entity.UserPhone</class>
    <class>com.academico.garagem.model.entity.Advertisement</class>
    <class>com.academico.garagem.model.entity.Image</class>
    <class>com.academico.garagem.model.entity.Rating</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/virtualgarage"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="postgres"/>
      <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
